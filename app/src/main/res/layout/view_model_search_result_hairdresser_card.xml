<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileCircleImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="USER NAME"
            app:layout_constraintTop_toTopOf="@id/profileCircleImageView"
            app:layout_constraintStart_toEndOf="@id/profileCircleImageView" />
        <TextView
            android:id="@+id/experienceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="経験年数3年"
            app:layout_constraintTop_toBottomOf="@id/userNameTextView"
            app:layout_constraintStart_toStartOf="@id/userNameTextView" />
        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="22歳"
            app:layout_constraintTop_toTopOf="@id/experienceTextView"
            app:layout_constraintStart_toEndOf="@id/experienceTextView" />
        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="男性"
            app:layout_constraintTop_toTopOf="@id/experienceTextView"
            app:layout_constraintStart_toEndOf="@id/ageTextView" />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minWidth="18dp"
            android:minHeight="18dp"
            android:rating="3.5"
            app:mrb_progressTint="@color/ratingStar"
            app:mrb_secondaryProgressTint="@color/ratingStar"
            app:layout_constraintTop_toBottomOf="@id/profileCircleImageView"
            app:layout_constraintStart_toStartOf="@id/profileCircleImageView"
            style="@style/Widget.MaterialRatingBar.RatingBar" />
        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3.5"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintStart_toEndOf="@id/ratingBar" />
        <ImageView
            android:id="@+id/reviewImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_mode_comment_white_24dp"
            android:tint="#87bfe4"
            android:scaleType="centerCrop"
            android:contentDescription="TODO"
            app:layout_constraintStart_toEndOf="@id/ratingTextView"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar" />
        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="口コミ120件"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintStart_toEndOf="@id/reviewImageView" />
        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="プロフィール。プロフィール。プロフィール。プロフィール。プロフィール。"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="@id/profileCircleImageView"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/locationImageView"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_location_on_white_24dp"
            android:scaleType="centerCrop"
            android:tint="#5d5d5d"
            app:layout_constraintStart_toStartOf="@id/profileCircleImageView"
            app:layout_constraintTop_toTopOf="@id/locationTextView"
            app:layout_constraintBottom_toBottomOf="@id/locationTextView"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="渋谷"
            app:layout_constraintTop_toBottomOf="@id/bioTextView"
            app:layout_constraintStart_toEndOf="@id/locationImageView" />
        <ImageView
            android:id="@+id/storeImageView"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_store_white_24dp"
            android:scaleType="centerCrop"
            android:tint="#5d5d5d"
            app:layout_constraintStart_toEndOf="@id/locationTextView"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintBottom_toBottomOf="@id/locationTextView"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/storeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="店名"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintStart_toEndOf="@id/storeImageView" />
        <TextView
            android:id="@+id/matchConditionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:text="条件に一致したメニュー"
            app:layout_constraintTop_toBottomOf="@id/locationImageView"
            app:layout_constraintStart_toStartOf="@id/profileCircleImageView"
            app:layout_constraintEnd_toEndOf="parent"/>
        <HorizontalScrollView
            android:id="@+id/menuCardsHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/matchConditionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/menuCardsLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>